---
import Layout from "../layouts/Layout.astro";
import TypewriterEffect from "../components/interfaz/EfectoMecanografia.jsx";
import DemoInfoChart from "../components/inicio/GraficoInfoDemo.jsx";
import ChecklistDemoPhone from "../components/inicio/TelefonoDemoChecklist.jsx";
import DittoLogo from "../components/interfaz/LogoDitt.astro";
import GraficoComparativoBarras from "../components/graficos/GraficoComparativoBarras.jsx";

import {
  CheckCircle2,
  MessageCircle,
  FileText,
  Clipboard as ClipboardIcon,
  FileSpreadsheet,
  Mail,
  File as FileIcon,
} from "lucide-react";

const pills = [
  { text: "Escaneo códigos", color: "text-emerald-500" },
  { text: "Cronómetro", color: "text-rose-500" },
  { text: "Satisfacción", color: "text-amber-400" },
  { text: "Scanner QR", color: "text-cyan-400" },
  { text: "Validación de ubicacion", color: "text-green-500" },
  { text: "Notas de Voz", color: "text-pink-500" },
  { text: "Textos", color: "text-indigo-400" },
  { text: "Fotos", color: "text-purple-500" },
  { text: "Moneda", color: "text-yellow-500" },
  { text: "Disclaimer", color: "text-gray-400" },
  { text: "Archivos", color: "text-blue-300" },
  { text: "Escáner Carnet/ID", color: "text-indigo-500" },
  { text: "Selección Múltiple", color: "text-teal-400" },
  { text: "NPS", color: "text-orange-500" },
  { text: "Croquis/Dibujo", color: "text-fuchsia-400" },
  { text: "Estado", color: "text-lime-400" },
  { text: "Stop & Go", color: "text-red-600" },
  { text: "Contador", color: "text-sky-400" },
  { text: "Selector Equipo", color: "text-violet-400" },
  { text: "Lapso Tiempo", color: "text-rose-300" },
  { text: "Índice UV", color: "text-yellow-400" },
];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Inicio Ditt">
  <!-- Contenido de la página -->
  <section class="py-4 md:py-10 bg-slate-900 overflow-hidden relative">
    <style>
      @keyframes epicSlideIn {
        0% {
          opacity: 0;
          transform: translateY(100px) scale(0.8);
        }
        60% {
          opacity: 1;
          transform: translateY(-10px) scale(1.02);
        }
        100% {
          opacity: 1;
          transform: translateY(0) scale(1);
        }
      }
      @keyframes epicOverlayIn {
        0% {
          opacity: 0;
          transform: scale(0.5) rotate(-10deg);
        }
        60% {
          opacity: 1;
          transform: scale(1.05) rotate(2deg);
        }
        100% {
          opacity: 1;
          transform: scale(1) rotate(0);
        }
      }
      @keyframes epicOverlayOut {
        0% {
          opacity: 1;
          transform: scale(1);
        }
        20% {
          opacity: 1;
          transform: scale(1.05);
        }
        100% {
          opacity: 0;
          transform: scale(0.5) rotate(10deg);
        }
      }
      @keyframes radiate {
        0% {
          box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
        }
        50% {
          box-shadow:
            0 0 25px rgba(34, 211, 238, 0.8),
            0 0 50px rgba(59, 130, 246, 0.4);
        }
        100% {
          box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
        }
      }
      @keyframes flow {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
      /* Add helper classes if needed, but Tailwind handles most */
      .animate-spin-slow {
        animation: spin 12s linear infinite;
      }
      .animate-spin-reverse-slow {
        animation: spin 15s linear infinite reverse;
      }
    </style>

    <!-- Background blobs -->
    <div
      class="absolute top-20 left-10 w-72 h-72 bg-purple-500/20 rounded-full blur-3xl">
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl">
    </div>

    <div
      class="w-full max-w-[95%] xl:max-w-[1700px] mx-auto px-6 flex flex-col lg:flex-row items-start justify-center gap-12">
      <!-- INFO SECTION (Converted to Astro + Islands) -->
      <div class="lg:w-1/2 pt-0 md:pt-10 relative z-20">
        <h2
          class="mt-4 md:mt-10 mb-6 text-3xl md:text-5xl font-bold flex flex-wrap items-center gap-x-3 gap-y-3 justify-center lg:justify-start">
          <span
            class="bg-clip-text text-transparent bg-linear-to-r from-blue-400 to-emerald-400">
            Controla tu negocio con
          </span>

          <span
            class="inline-flex items-center gap-2 bg-slate-800/80 border border-slate-700/50 rounded-full pl-5 pr-2 py-1 shadow-lg shadow-purple-500/10 backdrop-blur-sm group hover:border-purple-500/30 transition-all duration-300">
            <span
              class="bg-clip-text text-transparent bg-linear-to-r from-purple-300 to-pink-300">
              Ditt
            </span>
            <div class="relative w-10 h-10 md:w-12 md:h-12">
              <DittoLogo
                className="w-full h-full group-hover:scale-110 transition-transform duration-300"
              />
            </div>
          </span>
        </h2>
        <h2 class="text-3xl md:text-5xl font-bold text-white mb-6 md:mb-20">
          Experiencia 100% Móvil
        </h2>
        <h2
          class="text-xl sm:text-2xl md:text-5xl font-bold mb-2 text-left"
          style="text-wrap: balance;">
          <span
            class="bg-clip-text text-transparent bg-linear-to-r from-blue-400 to-indigo-500 leading-tight">
            Es momento de olvidarte de los aburridos y poco efectivos checklists
            tradicionales
          </span>
        </h2>
        <div class="mb-8 max-w-xl mx-auto lg:mx-0">
          <div
            class="flex flex-wrap items-center gap-3 mb-5 justify-center lg:justify-start">
            <div
              class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-800/50 border border-slate-700/50 text-slate-400 text-sm line-through decoration-rose-500/70 decoration-2">
              <MessageCircle size={14} className="text-slate-500" /> WhatsApp
            </div>
            <div
              class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-800/50 border border-slate-700/50 text-slate-400 text-sm line-through decoration-rose-500/70 decoration-2">
              <FileText size={14} className="text-slate-500" /> Notas
            </div>
            <div
              class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-800/50 border border-slate-700/50 text-slate-400 text-sm line-through decoration-rose-500/70 decoration-2">
              <ClipboardIcon size={14} className="text-slate-500" /> Pizarras
            </div>
            <div
              class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-800/50 border border-slate-700/50 text-slate-400 text-sm line-through decoration-rose-500/70 decoration-2">
              <FileSpreadsheet size={14} className="text-slate-500" /> Excel
            </div>
            <div
              class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-800/50 border border-slate-700/50 text-slate-400 text-sm line-through decoration-rose-500/70 decoration-2">
              <Mail size={14} className="text-slate-500" /> Correo
            </div>
            <div
              class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-slate-800/50 border border-slate-700/50 text-slate-400 text-sm line-through decoration-rose-500/70 decoration-2">
              <FileIcon size={14} className="text-slate-500" /> Papel
            </div>
          </div>

          <p class="text-slate-300 text-lg leading-relaxed">
            <span class="text-rose-400 font-semibold italic"
              >"Esos no son procesos reales..."</span
            >
            <br />
            Olvídate del caos manual. Con <span
              class="text-emerald-400 font-bold">Ditt</span
            >, controla, mide y optimiza cada operación desde tu bolsillo,
            <span class="text-white font-medium">sin complicaciones.</span>
          </p>
        </div>

        <div
          class="mt-8 mb-4 flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-2 text-2xl md:text-3xl font-bold min-h-14">
          <h3 class="text-white">Esta app se adapta a:</h3>
          <div
            class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-emerald-400">
            <TypewriterEffect
              client:visible
              typingSpeed={50}
              deletingSpeed={30}
              pauseTime={1500}
              words={[
                "Supervisores de Obra",
                "Prevención de Riesgos",
                "Control de Calidad",
                "Restaurantes",
                "Hoteles",
                "Mantenimiento Industrial",
                "Seguridad Privada",
                "Flotas de Transporte",
                "Limpieza de Oficinas",
                "Supermercados",
                "Farmacias",
                "Gimnasios",
                "Jardines Infantiles",
                "Clínicas y Hospitales",
                "Rent a Car",
                "Administración de Edificios",
                "Servicios Técnicos",
                "Agroindustria",
                "Plantas de Producción",
                "Organizadores de Eventos",
                "Empresas de Aseo",
                "Retail",
                "Centros Comerciales",
                "Laboratorios",
                "Centros de Distribución",
                "Auditorías Sanitarias",
                "Inspección de Maquinaria",
                "Recepción de Mercadería",
                "Rondas de Vigilancia",
                "Profesores",
                "Talleres Mecánicos",
                "Minimarkets",
                "Botillerías",
                "Control de EPP",
                "Checklists de Vehículos",
              ]}
            />
          </div>
        </div>

        <div class="hidden lg:block">
          <DemoInfoChart client:visible>
            <div
              class="flex flex-wrap gap-3 justify-center mt-6 lg:justify-start">
              {
                pills.map((pill) => (
                  <div class="flex items-center gap-1.5 px-3 py-1.5 bg-slate-800 rounded-full border border-slate-700 text-slate-300 text-sm hover:border-slate-500 transition-colors cursor-default">
                    <CheckCircle2 size={16} className={pill.color} />
                    <span>{pill.text}</span>
                  </div>
                ))
              }
            </div>
          </DemoInfoChart>
        </div>
      </div>

      <!-- PHONE SECTION (Kept as React Island) -->
      <ChecklistDemoPhone client:visible>
        <!-- Background Charts Injected via Slot -->
        <!-- Top Left Blob -->
        <div class="absolute top-1/4 -left-20 w-64 h-64 -z-10 opacity-40">
          <svg viewBox="0 0 200 200" class="w-full h-full animate-spin-slow">
            <path
              fill="#818cf8"
              d="M45,-75C58,-69,68,-57,76,-44C84,-31,90,-16,88,-1C86,14,76,29,66,41C56,53,46,62,34,69C22,76,5,81,-11,80C-27,79,-43,72,-56,62C-69,52,-79,39,-83,24C-87,9,-85,-8,-78,-23C-71,-38,-59,-51,-46,-60C-33,-69,-17,-74,0,-74L0,0Z"
              transform="translate(100 100)"></path>
          </svg>
        </div>

        <!-- Bottom Right Blob -->
        <div class="absolute bottom-1/4 -right-20 w-80 h-80 -z-10 opacity-40">
          <svg
            viewBox="0 0 200 200"
            class="w-full h-full animate-spin-reverse-slow">
            <path
              fill="#34d399"
              d="M38,-63C50,-58,61,-49,70,-38C79,-27,86,-14,85,-1C84,12,75,25,65,36C55,47,44,57,32,64C20,71,6,75,-7,74C-20,73,-32,67,-43,58C-54,49,-64,37,-69,24C-74,11,-74,-3,-69,-16C-64,-29,-54,-41,-43,-50C-32,-59,-20,-65,-6,-64C8,-63,26,-68,38,-63Z"
              transform="translate(100 100)"></path>
          </svg>
        </div>

        <!-- Top Right Small Blob -->
        <div class="absolute -top-10 -right-12 w-48 h-48 -z-10 opacity-30">
          <div
            class="w-full h-full rounded-full bg-linear-to-br from-pink-400 to-rose-500 blur-2xl">
          </div>
        </div>

        <!-- Bottom Left Small Blob -->
        <div class="absolute -bottom-10 -left-12 w-56 h-56 -z-10 opacity-30">
          <div
            class="w-full h-full rounded-full bg-linear-to-tr from-cyan-400 to-blue-500 blur-2xl">
          </div>
        </div>

        <!-- Bar Chart Decoration -->
        <div
          class="absolute top-1/2 -right-32 transform -translate-y-1/2 w-64 h-48 -z-20 opacity-30 hidden lg:flex flex-col gap-2 p-4">
          <div class="h-2 w-full bg-slate-700/50 rounded-full overflow-hidden">
            <div class="h-full bg-purple-400 w-[65%]"></div>
          </div>
          <div class="h-2 w-full bg-slate-700/50 rounded-full overflow-hidden">
            <div class="h-full bg-indigo-400 w-[45%]"></div>
          </div>
          <div class="h-2 w-full bg-slate-700/50 rounded-full overflow-hidden">
            <div class="h-full bg-emerald-400 w-[85%]"></div>
          </div>
          <div class="h-2 w-full bg-slate-700/50 rounded-full overflow-hidden">
            <div class="h-full bg-amber-400 w-[55%]"></div>
          </div>
          <div class="h-2 w-full bg-slate-700/50 rounded-full overflow-hidden">
            <div class="h-full bg-pink-400 w-[75%]"></div>
          </div>
        </div>
      </ChecklistDemoPhone>

      <!-- Mobile Only Pills positioned under the phone -->
      <div class="flex flex-wrap gap-3 justify-center lg:hidden w-full mt-8">
        {
          pills.map((pill) => (
            <div class="flex items-center gap-1.5 px-3 py-1.5 bg-slate-800 rounded-full border border-slate-700 text-slate-300 text-sm hover:border-slate-500 transition-colors cursor-default">
              <CheckCircle2 size={16} className={pill.color} />
              <span>{pill.text}</span>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- El Método Ditt Section -->
  <section class="py-20 md:py-40 bg-slate-900 relative overflow-hidden">
    <!-- Subtle blobs for this section -->
    <div
      class="absolute top-1/2 left-0 w-96 h-96 bg-blue-600/10 rounded-full blur-[120px] -z-10">
    </div>
    <div
      class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-emerald-600/5 rounded-full blur-[150px] -z-10">
    </div>

    <div class="w-full max-w-[95%] xl:max-w-[1700px] mx-auto px-6">
      <div class="flex flex-col items-center mb-20 md:mb-32">
        <span
          class="px-4 py-1.5 rounded-full bg-blue-500/10 border border-blue-500/20 text-blue-400 text-sm font-bold uppercase tracking-wider mb-4">
          Eficiencia Ágil
        </span>
        <h2
          class="text-4xl md:text-7xl font-bold text-white text-center leading-tight">
          El Método <span
            class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-emerald-400"
            >Ditt</span
          >
        </h2>
        <p
          class="text-slate-400 text-lg md:text-2xl mt-8 text-center max-w-3xl leading-relaxed">
          Digitalizamos tu operación en 3 pasos simples, sin consultorías lentas
          ni procesos complejos.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-12 relative">
        <!-- Connecting Line (Desktop) -->
        <div
          class="hidden lg:block absolute top-[45%] left-[15%] right-[15%] h-px bg-linear-to-r from-transparent via-slate-700 to-transparent -z-10">
        </div>

        <!-- Step 1 -->
        <div
          class="bg-slate-800/30 p-10 pt-16 rounded-[3rem] border border-slate-700/50 hover:border-blue-500/50 transition-all duration-500 group relative backdrop-blur-sm">
          <div
            class="absolute -top-8 left-1/2 md:left-10 -translate-x-1/2 md:translate-x-0 w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center text-white font-black text-2xl shadow-2xl shadow-blue-600/40 group-hover:scale-110 group-hover:-rotate-3 transition-transform duration-500">
            01
          </div>
          <div
            class="mb-8 text-blue-400 w-16 h-16 bg-blue-500/10 rounded-2xl flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-upload-cloud"
              ><path
                d="M4 14.899A7 7 0 1 1 15.71 8h1.79a4.5 4.5 0 0 1 2.5 8.242"
              ></path><path d="M12 12v9"></path><path d="m16 16-4-4-4 4"
              ></path></svg
            >
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Digitalizar</h3>
          <p class="text-slate-400 leading-relaxed text-lg">
            Subimos tus procesos actuales a la nube. Tus antiguos formularios de
            papel cobran vida digital en minutos.
          </p>
        </div>

        <!-- Step 2 -->
        <div
          class="bg-slate-800/30 p-10 pt-16 rounded-[3rem] border border-slate-700/50 hover:border-emerald-500/50 transition-all duration-500 group relative backdrop-blur-sm">
          <div
            class="absolute -top-8 left-1/2 md:left-10 -translate-x-1/2 md:translate-x-0 w-16 h-16 bg-emerald-600 rounded-2xl flex items-center justify-center text-white font-black text-2xl shadow-2xl shadow-emerald-600/40 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500">
            02
          </div>
          <div
            class="mb-8 text-emerald-400 w-16 h-16 bg-emerald-500/10 rounded-2xl flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-smartphone"
              ><rect width="14" height="20" x="5" y="2" rx="2" ry="2"
              ></rect><path d="M12 18h.01"></path></svg
            >
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Desplegar</h3>
          <p class="text-slate-400 leading-relaxed text-lg">
            Tu equipo descarga la app y comienza a recolectar datos en terreno
            inmediatamente. Sin curvas de aprendizaje.
          </p>
        </div>

        <!-- Step 3 -->
        <div
          class="bg-slate-800/30 p-10 pt-16 rounded-[3rem] border border-slate-700/50 hover:border-purple-500/50 transition-all duration-500 group relative backdrop-blur-sm">
          <div
            class="absolute -top-8 left-1/2 md:left-10 -translate-x-1/2 md:translate-x-0 w-16 h-16 bg-purple-600 rounded-2xl flex items-center justify-center text-white font-black text-2xl shadow-2xl shadow-purple-600/40 group-hover:scale-110 group-hover:-rotate-3 transition-transform duration-500">
            03
          </div>
          <div
            class="mb-8 text-purple-400 w-16 h-16 bg-purple-500/10 rounded-2xl flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-trending-up"
              ><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"
              ></polyline><polyline points="17 6 23 6 23 12"></polyline></svg
            >
          </div>
          <h3 class="text-2xl font-bold text-white mb-4">Analizar</h3>
          <p class="text-slate-400 leading-relaxed text-lg">
            Visualiza indicadores en tiempo real y recibe reportes inteligentes.
            Toma el control total de tu operación.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Impacto en la Operación Section -->
  <section class="py-20 md:py-40 bg-slate-900 relative overflow-hidden">
    <div class="w-full max-w-[95%] xl:max-w-[1700px] mx-auto px-0 md:px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Left: Metrics & Text -->
        <div class="order-2 lg:order-1 px-6 md:px-0">
          <span
            class="px-4 py-1.5 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 text-sm font-bold uppercase tracking-wider mb-6 inline-block">
            Promesa de Valor
          </span>
          <h2
            class="text-4xl md:text-6xl font-bold text-white mb-8 leading-tight">
            Optimiza tu Negocio: <br />
            <span
              class="text-transparent bg-clip-text bg-linear-to-r from-emerald-400 to-cyan-400">
              Impacto Proyectado
            </span>
          </h2>
          <p class="text-slate-400 text-xl leading-relaxed mb-12 max-w-xl">
            Diseñamos Ditt para que tu empresa alcance niveles superiores de
            eficiencia y control, eliminando las fricciones del trabajo manual.
          </p>

          <div class="grid sm:grid-cols-2 gap-8">
            <div
              class="p-6 bg-slate-800/40 rounded-3xl border border-slate-700/50 hover:border-emerald-500/40 transition-colors">
              <div class="text-3xl font-black text-white mb-2">Ilimitado</div>
              <div class="text-slate-400 font-medium">
                Soporte para miles de procesos simultáneos.
              </div>
            </div>
            <div
              class="p-6 bg-slate-800/40 rounded-3xl border border-slate-700/50 hover:border-blue-500/40 transition-colors">
              <div class="text-3xl font-black text-white mb-2">
                Offline-First
              </div>
              <div class="text-slate-400 font-medium">
                Funciona al 100% sin conexión en terreno.
              </div>
            </div>
            <div
              class="p-6 bg-slate-800/40 rounded-3xl border border-slate-700/50 hover:border-purple-500/40 transition-colors">
              <div class="text-3xl font-black text-white mb-2">Automático</div>
              <div class="text-slate-400 font-medium">
                Reportes listos al instante, sin burocracia.
              </div>
            </div>
            <div
              class="p-6 bg-slate-800/40 rounded-3xl border border-slate-700/50 hover:border-pink-500/40 transition-colors">
              <div class="text-3xl font-black text-white mb-2">Seguro</div>
              <div class="text-slate-400 font-medium">
                Respaldo total y trazabilidad garantizada.
              </div>
            </div>
          </div>
        </div>

        <!-- Right: Comparison Bar Graphic -->
        <div class="order-1 lg:order-2 relative px-0 md:px-10 hidden lg:block">
          <div
            class="absolute inset-0 bg-blue-500/10 rounded-full blur-[100px] -z-10">
          </div>
          <GraficoComparativoBarras client:visible />
        </div>
      </div>
    </div>
  </section>
</Layout>
