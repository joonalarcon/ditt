---
import {
  Facebook,
  Twitter,
  Instagram,
  Linkedin,
  Mail,
  Phone,
} from "lucide-react";
import DittoLogo from "../interfaz/LogoDitt.astro";

const baseUrl = import.meta.env.BASE_URL;
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-slate-900 border-t border-slate-800 text-slate-400 py-12 mt-auto">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      {/* Columna 1: Logo y descripción */}
      <div class="space-y-4">
        <div class="flex items-center gap-3">
          <DittoLogo className="w-10 h-10" />
          <span class="text-2xl font-bold text-white">Ditt</span>
        </div>
        <p class="text-sm">
          Transformando el caos en control. La plataforma inteligente para la
          gestión operativa de tu empresa.
        </p>
      </div>

      {/* Columna 2: Enlaces Rápidos */}
      <div>
        <h3 class="text-white font-bold mb-4">Enlaces Rápidos</h3>
        <ul class="space-y-2">
          <li>
            <a href={baseUrl} class="hover:text-blue-400 transition-colors">
              Inicio
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}nosotros/`}
              class="hover:text-blue-400 transition-colors">
              Sobre Nosotros
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}precios/`}
              class="hover:text-blue-400 transition-colors">
              Precios
            </a>
          </li>
          <li>
            <a
              href={`${baseUrl}contacto/`}
              class="hover:text-blue-400 transition-colors">
              Contacto
            </a>
          </li>
        </ul>
      </div>

      {/* Columna 3: Contacto */}
      <div>
        <h3 class="text-white font-bold mb-4">Contacto</h3>
        <ul class="space-y-3 text-sm">
          <li class="flex items-center gap-3">
            <Phone size={18} className="shrink-0 text-blue-500" />
            <span>+56 9 1234 5678</span>
          </li>
          <li class="flex items-center gap-3">
            <Mail size={18} className="shrink-0 text-blue-500" />
            <span>contacto@ditt.cl</span>
          </li>
        </ul>
      </div>

      {/* Columna 4: Redes Sociales */}
      <div>
        <h3 class="text-white font-bold mb-4">Síguenos</h3>
        <div class="flex gap-4">
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center hover:bg-blue-600 hover:text-white transition-all text-slate-300">
            <Facebook size={20} />
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center hover:bg-blue-400 hover:text-white transition-all text-slate-300">
            <Twitter size={20} />
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center hover:bg-pink-600 hover:text-white transition-all text-slate-300">
            <Instagram size={20} />
          </a>
          <a
            href="#"
            class="w-10 h-10 rounded-full bg-slate-800 flex items-center justify-center hover:bg-blue-700 hover:text-white transition-all text-slate-300">
            <Linkedin size={20} />
          </a>
        </div>
      </div>
    </div>

    <div class="border-t border-slate-800 pt-8 text-center text-sm">
      <p>
        &copy; {currentYear} Ditt. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
